<?xml version="1.0" encoding="utf-8"?>
<!-- 自定义控件 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--选中时的图片背景--> 
    <item android:state_pressed="true" android:drawable="@drawable/ui_title_loginout_btn_selected_blue" />
    <!--选中时的图片背景--> 
    <item android:state_selected="true" android:drawable="@drawable/ui_title_loginout_btn_selected_blue" />
    <!-- 有焦点时的背景图片 -->  
    <item android:state_focused="true" android:drawable="@drawable/ui_title_loginout_btn_selected_blue" />
    <!-- 默认时的背景图片-->  
    <item android:drawable="@drawable/ui_title_loginout_btn_normal_blue" />
</selector>
